{
	"name": "@xpenb/template",
	"module": "index.ts",
	"type": "module",
	"scripts": {
		"lint": "bunx --bun oxlint --import-plugin --fix",
		"format": "bunx --bun prettier **/*.ts --write"
	},
	"devDependencies": {
		"@types/bun": "^1.1.3",
		"oxlint": "^0.4.2",
		"prettier": "^3.3.0"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "always",
		"endOfLine": "lf"
	}
}
